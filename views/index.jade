extends ./layout.jade

block title
	#peddler
	#about
		.name by 
			a(href="http://andrewlb.com" target="_blank") andrewlb
		//- h1 Peddler

block history
	#history
		.title Claimed
		.bucket

block visualizer
	#visualizer
		.line
		.marker
		.label Unclaimed Miles
		#dolla.label.right You've got lots to spare
		.link
			.treat Treat!
			.own Claim

block calculate
	#calculate
		.fraction
			.numerator
				span#numerator.numeric.editable(contenteditable="true") Monthly Budget
				//- span.small *12
			.line
			.denominator
				span#denominator.numeric.editable(contenteditable="true") Yearly Goal
		.equals
			spam.big =
			span.small $
			span#results.result 0
			span.small /km

block authenticate
	#auth.hide
		.modal
			.strava
				div Link your Strava
				a(href="/auth")
					img(src="/img/strava.png")
			.pinterest
				div What's your Board
				span.editable(contenteditable="true") Board ID
